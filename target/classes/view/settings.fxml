<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<StackPane fx:id="settings" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.nhom12.arkanoid.controller.SettingsController">

    <stylesheets>
        <URL value="@menu.css" />
    </stylesheets>

    <ImageView fitWidth="800" fitHeight="600" preserveRatio="false">
        <image>
            <Image url="@../Image/background_menu_setting.png" />
        </image>
    </ImageView>
<!--    &lt;!&ndash; Background video &ndash;&gt;-->
<!--    <MediaView fx:id="mediaView" preserveRatio="true" />-->

    <!-- Overlay UI -->
    <VBox alignment="CENTER" spacing="20">
        <!-- Settings title -->
        <Label text="SETTINGS" textFill="gold">
            <style>-fx-effect: dropshadow(gaussian, black, 10, 0.5, 0, 0);</style>
            <font>
                <Font name="Serif" size="48" />
            </font>
        </Label>

        <!-- Buttons -->
        <VBox alignment="CENTER" spacing="15">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <CheckBox fx:id="musicCheckBox" style="-fx-font-size: 20px; -fx-effect: dropshadow(gaussian, black, 10, 0.5, 0, 0);" text="Enable Music" textFill="gold" />

            <CheckBox fx:id="sfxCheckBox" style="-fx-font-size: 20px; -fx-effect: dropshadow(gaussian, black, 10, 0.5, 0, 0);" text="Enable Sound Effects" textFill="gold" />

            <Button onAction="#onBackClicked" styleClass="button" text="Back" />

        </VBox>
    </VBox>
</StackPane>
