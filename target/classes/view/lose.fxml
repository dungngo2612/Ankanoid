<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<StackPane fx:id="lose"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.nhom12.arkanoid.controller.LoseController"
           alignment="CENTER">
    <stylesheets>
        <URL value="@menu.css"/>
    </stylesheets>

    <VBox alignment="CENTER" spacing="15">
        <Label text="YOU LOSE" textFill="gold">
            <style>-fx-effect: dropshadow(gaussian, black, 10, 0.5, 0, 0);</style>
            <font>
                <Font name="Serif" size="48"/>
            </font>
        </Label>
        <Text fx:id="scoreText" style="-fx-font-size: 18px; -fx-fill: white;" />
        <Text fx:id="timeText" style="-fx-font-size: 18px; -fx-fill: white;" />
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <Button text="HIGHSCORE" onAction="#onHighscoreClicked" styleClass="button"/>
        <Button text="MENU" onAction="#onMenuClicked" styleClass="button"/>
        <Button text="AGAIN" onAction="#onAgainClicked" styleClass="button"/>
    </VBox>
</StackPane>
