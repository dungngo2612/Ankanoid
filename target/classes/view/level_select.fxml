<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nhom12.arkanoid.controller.LevelSelectController">

    <stylesheets>
        <URL value="@level_select.css" />
    </stylesheets>

    <ImageView fitHeight="600.0" fitWidth="800.0" layoutX="100.0" pickOnBounds="true" preserveRatio="true" scaleX="1.35">
        <image>
            <Image url="@../Image/challenge_background.jpg" />
        </image>
    </ImageView>

    <Button fx:id="level1Button" alignment="CENTER" contentDisplay="TOP" layoutX="282.0" layoutY="365.0" mnemonicParsing="false" onAction="#onLevel1Clicked" prefHeight="94.0" prefWidth="86.0" styleClass="map-level-button" text="Level 1">
      <graphic>
            <ImageView fitHeight="81.0" fitWidth="84.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../Image/Level1.png" />
                </image>
            </ImageView>
      </graphic>
      <font>
         <Font name="Elephant Italic" size="20.0" />
      </font></Button>

    <Button fx:id="level2Button" alignment="CENTER" contentDisplay="TOP" layoutX="453.0" layoutY="249.0" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onLevel2Clicked" prefHeight="125.0" prefWidth="96.0" styleClass="map-level-button" text="Level 2" textAlignment="CENTER">
      <graphic>
            <ImageView fitHeight="87.0" fitWidth="124.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../Image/Level2.png" />
                </image>
            </ImageView>
      </graphic>
      <font>
         <Font name="Elephant Italic" size="20.0" />
      </font></Button>

    <Button fx:id="level3Button" contentDisplay="TOP" layoutX="206.0" layoutY="173.0" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onLevel3Clicked" prefHeight="126.0" prefWidth="96.0" styleClass="map-level-button" text="Level 3" textAlignment="CENTER">
      <font>
         <Font name="Elephant Italic" size="20.0" />
      </font>
      <graphic>
            <ImageView fitHeight="88.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../Image/Level3.png" />
                </image>
            </ImageView>
      </graphic></Button>

    <Button fx:id="level4Button" alignment="CENTER" contentDisplay="TOP" layoutX="501.0" layoutY="36.0" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="126.0" prefWidth="96.0" styleClass="map-level-button" text="Level 4" onAction="#onLevel4Clicked">
        <font>
            <Font name="Elephant Italic" size="20.0" />
        </font>
      <graphic>
            <ImageView fitHeight="115.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../Image/Level4.png" />
                </image>
                <effect>
                    <ColorAdjust brightness="-0.5" />
                </effect>
            </ImageView>
      </graphic></Button>

    <Button layoutX="151.0" layoutY="500.0" mnemonicParsing="false" onAction="#onBackClicked" styleClass="map-level-button"
            alignment="CENTER">
        <graphic>
            <ImageView fitWidth="500.0" preserveRatio="true">
                <image>
                    <Image url="@../Image/back.png" /> </image>
            </ImageView>
        </graphic>
    </Button>
</AnchorPane>
