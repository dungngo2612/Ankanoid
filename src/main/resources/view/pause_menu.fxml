<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pauseMenuRoot" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nhom12.arkanoid.controller.PauseMenuController">
    <children>
        <Rectangle fill="#000000a6" height="600.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.7999999999999545" AnchorPane.topAnchor="0.0" />
        <VBox fx:id="mainPauseButtonsVBox" alignment="CENTER" layoutX="300.0" layoutY="150.0" prefHeight="300.0" prefWidth="200.0" spacing="20.0" style="-fx-background-color: #333333; -fx-background-radius: 10; -fx-border-color: #555555; -fx-border-width: 2; -fx-border-radius: 10;">
            <children>
                <Button mnemonicParsing="false" onAction="#handleResume" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #555555; -fx-text-fill: white;" text="Resume">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#handleRestart" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #555555; -fx-text-fill: white;" text="Restart Game">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#handleMainMenu" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #555555; -fx-text-fill: white;" text="Main Menu">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#handleSettings" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #555555; -fx-text-fill: white;" text="Settings">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

        </VBox>
      <VBox fx:id="goToMainMenuConfirmationVBox" alignment="CENTER" layoutX="203.0" layoutY="210.0" prefHeight="194.0" prefWidth="394.0" spacing="20.0" style="-fx-background-color: #333333; -fx-background-radius: 10; -fx-border-color: #555555; -fx-border-width: 2; -fx-border-radius: 10;">
         <children>
            <Label text="Do you really want quit ?" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" onAction="#handleConfirmExit" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #555555; -fx-text-fill: white;" text="Yes">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleCancelExit" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #555555; -fx-text-fill: white;" text="No">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      <VBox fx:id="restartConfirmationVBox" alignment="CENTER" layoutX="213.0" layoutY="220.0" prefHeight="194.0" prefWidth="394.0" spacing="20.0" style="-fx-background-color: #333333; -fx-background-radius: 10; -fx-border-color: #555555; -fx-border-width: 2; -fx-border-radius: 10;">
         <children>
            <Label text="Do you really want to restart ?" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" onAction="#handleConfirmRestart" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #555555; -fx-text-fill: white;" text="Yes">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleCancelExit" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #555555; -fx-text-fill: white;" text="No">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      <VBox fx:id="settingsVBox" alignment="CENTER" layoutX="223.0" layoutY="230.0" prefHeight="194.0" prefWidth="394.0" spacing="20.0" style="-fx-background-color: #333333; -fx-background-radius: 10; -fx-border-color: #555555; -fx-border-width: 2; -fx-border-radius: 10;">
         <children>
            <Label text="Settings" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <CheckBox fx:id="musicEnable" mnemonicParsing="false" text="Enable music" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </CheckBox>
            <CheckBox fx:id="effectsEnable" mnemonicParsing="false" text="Enable sound effects" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </CheckBox>
            <Button mnemonicParsing="false" text="Quit" onAction="#handleCancelExit" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
    </children>
</AnchorPane>
