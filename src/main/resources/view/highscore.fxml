<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.nhom12.arkanoid.controller.HighScoreController">

    <stylesheets>
        <URL value="@menu.css" />
    </stylesheets>

    <ImageView fitHeight="600" fitWidth="800" preserveRatio="false">
        <image>
            <Image url="@../Image/highscr.jpg" />
        </image>
    </ImageView>

    <!-- Background image -->
    <top>
        <StackPane>
            <VBox fx:id="scoreListVBox" alignment="CENTER" spacing="10">
                <Label text="RANKING" textFill="black">
                    <style>
                        -fx-effect: dropshadow(gaussian, white, 10, 0.5, 0, 0);
                    </style>
                    <font>
                        <Font name="Comic Sans MS" size="48" />
                    </font>
                </Label>
            </VBox>
        </StackPane>
    </top>

    <center>
        <StackPane>
            <VBox fx:id="evilListVBox" alignment="CENTER" spacing="10">
                <Label text="EVIL MODE" textFill="black">
                    <style>
                        -fx-effect: dropshadow(gaussian, white, 10, 0.5, 0, 0);
                    </style>
                    <font>
                        <Font name="Comic Sans MS" size="48" />
                    </font>
                </Label>
            </VBox>
        </StackPane>
    </center>

    <!-- Back button at bottom -->
    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="50" left="20" right="20" top="20" />
            </padding>

            <Button onAction="#onBackClicked" styleClass="image-button">
                <graphic>
                    <ImageView fitHeight="59.0" fitWidth="131.0" preserveRatio="true">
                        <image>
                            <Image url="@../Image/back.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </bottom>
</BorderPane>
