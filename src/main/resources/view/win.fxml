<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<StackPane fx:id="win"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.nhom12.arkanoid.controller.WinController"
           alignment="CENTER">

    <!--Style-->
    <stylesheets>
        <URL value="@menu.css"/>
    </stylesheets>

    <ImageView fitWidth="800" fitHeight="600" preserveRatio="false">
        <image>
            <Image url="@../Image/highscr.jpg" />
        </image>
    </ImageView>

    <VBox alignment="CENTER" spacing="15">
        <Label text="YOU WIN" textFill="black">
            <style>-fx-effect: dropshadow(gaussian, white, 10, 0.5, 0, 0);</style>
            <font>
                <Font name="Comic Sans MS" size="48"/>
            </font>
        </Label>

        <!--Text-->
        <Text fx:id="scoreText" style="-fx-font-size: 30px; -fx-fill: black; -fx-font-family: 'Comic Sans MS';
                -fx-effect: dropshadow(gaussian, white, 10, 0.5, 0, 0);" />
        <Text fx:id="timeText" style="-fx-font-size: 30px; -fx-fill: black; -fx-font-family: 'Comic Sans MS';
                -fx-effect: dropshadow(gaussian, white, 10, 0.5, 0, 0);" />

        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!--Các nút bấm-->
        <Button onAction="#onHighscoreClicked" styleClass="image-button">
            <graphic>
                <ImageView fitWidth="400.0" preserveRatio="true">
                    <image>
                        <Image url="@../Image/highscore.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button onAction="#onAgainClicked" styleClass="image-button">
            <graphic>
                <ImageView fitWidth="400.0" preserveRatio="true">
                    <image>
                        <Image url="@../Image/again.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button onAction="#onMenuClicked" styleClass="image-button">
            <graphic>
                <ImageView fitWidth="400.0" preserveRatio="true">
                    <image>
                        <Image url="@../Image/back.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

    </VBox>
</StackPane>
