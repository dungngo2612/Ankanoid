<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="settings" alignment="CENTER" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nhom12.arkanoid.controller.SettingsController">

    <stylesheets>
        <URL value="@menu.css" />
    </stylesheets>

    <ImageView fitHeight="600.0" fitWidth="800.0" preserveRatio="false">
        <image>
            <Image url="@../Image/back_ground_menu.png" />
        </image>
    </ImageView>
    <!-- Overlay UI -->
    <VBox alignment="CENTER" spacing="20">
        <!-- Settings title -->
        <Label text="SETTINGS" textFill="black">
            <style>-fx-effect: dropshadow(gaussian, white, 10, 0.5, 0, 0);</style>
            <font>
                <Font name="Comic Sans MS" size="48" />
            </font>
        </Label>

        <!-- Buttons -->
        <VBox alignment="CENTER" spacing="15">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <CheckBox fx:id="musicCheckBox" style="-fx-font-size: 20px; -fx-font-family: 'Comic Sans MS';                         -fx-effect: dropshadow(gaussian, white, 10, 0.5, 0, 0);" text="Enable Music" textFill="black" />

            <CheckBox fx:id="sfxCheckBox" style="-fx-font-size: 20px; -fx-font-family: 'Comic Sans MS';              -fx-effect: dropshadow(gaussian, white, 10, 0.5, 0, 0);" text="Enable Sound Effects" textFill="black" />

            <Button onAction="#onBackClicked" styleClass="image-button">
                <graphic>
                    <ImageView fitHeight="81.0" fitWidth="298.0" preserveRatio="true">
                        <image>
                            <Image url="@../Image/back.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </VBox>
    </VBox>
</StackPane>
