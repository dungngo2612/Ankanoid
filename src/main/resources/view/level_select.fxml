<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nhom12.arkanoid.controller.LevelSelectController">

    <stylesheets>
        <URL value="@level_select.css" />
    </stylesheets>

    <ImageView fitHeight="600.0" fitWidth="800.0" layoutX="100.0" pickOnBounds="true" preserveRatio="true" scaleX="1.35">
        <image>
            <Image url="@../Image/level.png" />
        </image>
    </ImageView>

    <Button fx:id="level1Button" layoutX="204.0" layoutY="131.0" mnemonicParsing="false" onAction="#onLevel1Clicked" styleClass="map-level-button">
      <graphic>
            <ImageView fitHeight="169.0" fitWidth="173.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../Image/blackwood-Photoroom.png" />
                </image>
            </ImageView>
      </graphic></Button>

    <Button fx:id="level2Button" layoutX="427.0" layoutY="131.0" mnemonicParsing="false" onAction="#onLevel2Clicked" styleClass="map-level-button">
      <graphic>
            <ImageView fitHeight="169.0" fitWidth="169.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../Image/riverbank-Photoroom.png" />
                </image>
            </ImageView>
      </graphic></Button>

    <Button fx:id="level3Button" layoutX="214.0" layoutY="300.0" mnemonicParsing="false" onAction="#onLevel3Clicked" styleClass="map-level-button">
      <graphic>
            <ImageView fitHeight="149.0" fitWidth="156.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../Image/vault-Photoroom.png" />
                </image>
            </ImageView>
      </graphic></Button>

    <Button fx:id="level4Button" layoutX="452.0" layoutY="315.0" mnemonicParsing="false" prefHeight="114.0" prefWidth="114.0" styleClass="level-button" text="?">
      <font>
         <Font size="30.0" />
      </font></Button>

    <Button layoutX="332.0" layoutY="497.0" mnemonicParsing="false" onAction="#onBackClicked" styleClass="map-level-button">
      <graphic>
            <ImageView fitHeight="102.0" fitWidth="150.0" preserveRatio="true">
                <image>
                    <Image url="@../Image/Back-removebg-preview.png" /> </image>
            </ImageView>
      </graphic>
    </Button>
</AnchorPane>
