<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nhom12.arkanoid.controller.LevelSelectController">

    <stylesheets>
        <URL value="@level_select.css" />
    </stylesheets>

    <ImageView fitHeight="600.0" fitWidth="800.0" layoutX="100.0" pickOnBounds="true" preserveRatio="true" scaleX="1.35">
        <image>
            <Image url="@../Image/challenge_background.jpg" />
        </image>
    </ImageView>

    <Button fx:id="level1Button" layoutX="197.0" layoutY="82.0" mnemonicParsing="false" onAction="#onLevel1Clicked" styleClass="map-level-button">
      <graphic>
            <ImageView fitHeight="169.0" fitWidth="173.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../Image/Level1.png" />
                </image>
            </ImageView>
      </graphic></Button>

    <Button fx:id="level2Button" layoutX="475.0" layoutY="82.0" mnemonicParsing="false" onAction="#onLevel2Clicked" styleClass="map-level-button">
      <graphic>
            <ImageView fitHeight="169.0" fitWidth="169.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../Image/Level2.png" />
                </image>
            </ImageView>
      </graphic></Button>

    <Button fx:id="level3Button" layoutX="196.0" layoutY="312.0" mnemonicParsing="false" onAction="#onLevel3Clicked" styleClass="map-level-button">
      <graphic>
            <ImageView fitHeight="169.0" fitWidth="173.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../Image/Level3.png" />
                </image>
            </ImageView>
      </graphic></Button>

    <Button fx:id="level4Button" contentDisplay="CENTER" layoutX="463.0" layoutY="314.0" mnemonicParsing="false" prefHeight="114.0" prefWidth="114.0" styleClass="map-level-button" text="?" textFill="#d4c0c0">
      <font>
         <Font size="30.0" />
      </font>
        <graphic>
            <ImageView fitHeight="169.0" fitWidth="173.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../Image/Level4.png" />
                </image>
            <effect>
               <ColorAdjust brightness="-0.5" />
            </effect>
            </ImageView>
        </graphic></Button>

    <Button layoutX="351.0" layoutY="497.0" mnemonicParsing="false" onAction="#onBackClicked" styleClass="map-level-button">
      <graphic>
            <ImageView fitHeight="102.0" fitWidth="150.0" preserveRatio="true">
                <image>
                    <Image url="@../Image/Back1-removebg-preview.png" /> </image>
            </ImageView>
      </graphic>
    </Button>
</AnchorPane>
